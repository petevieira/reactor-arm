<!-- -*- mode: XML -*- -->

<launch>
    <param name="robot_description" textfile="$(find reactor_arm)/urdf/robots/reactor_description.urdf" />

    <rosparam>
      file="$(find reactor_arm)/config/arm_controllers.yaml" command="load"
    </rosparam>

    <node
      name="dynamixel_trajectory_controller" pkg="dynamixel_controllers" type="trajectory_controller.py"
      args="dynamixel_controllers"
      output="screen" >
          <rosparam>
            file="$(find reactor_arm)/config/manager.yaml" command="load"
          </rosparam>
    </node>

    <node>
      name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher"
    </node>
</launch>